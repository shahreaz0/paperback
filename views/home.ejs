<%- include("./partials/top") %>


<section id="header">
  <h1>Paperback</h1>
</section>

<h2>Recently added books</h2>
<div class="ui grid centered">

  <% books.forEach(book => { %>

  <div class="eight wide mobile five wide tablet four wide computer column">
    <div class="ui special cards" id="card">
      <div class="card">
        <div class="blurring dimmable image" id="fixed-image">
          <div class="ui dimmer">
            <div class="content">
              <div class="center">
                <a href="/books/<%= book._id %>" class="ui inverted button">View</a>
              </div>
            </div>
          </div>
          <img src="<%= book.imagePath %>" height="300px" width="200px">
        </div>
        <div class="content">
          <a class="header" href="/books/<%= book._id %>"><%= book.title %> </a>
          <div class="meta">
            <span class="date">Published in
              <%= book.publishDate.toLocaleDateString("en-US", {year: 'numeric', month: 'long', day: 'numeric'}) %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% }) %>

</div>

<%- include("./partials/bottom") %>