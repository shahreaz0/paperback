<%- include("./../partials/top") %>

<h1>Edit <%= book.title %></h1>

<form method="POST" action="/books/<%= book._id %>?_method=PUT">

    <label for="title">TITLE</label>
    <input type="text" name="bookTitle" id="title" value="<%= book.title %>">
    <br>
    <label for="desc">DESCRIPTION</label>
    <input type="text" name="bookDescription" id="desc" value="<%= book.description %>">
    <br>
    <label for="publish">PUBLISH DATE</label>
    <input type="date" name="bookPublishDate" id="publish">
    <br>
    <label for="author">AUTHOR</label>
    <select name="bookAuthor" id="author">
        <option value="">Choose</option>

        <% authors.forEach(author => { %>

        <option value="<%= author._id %>"> <%= author.name %> </option>

        <% }) %>

    </select>
    <br>
    <label for="cover"></label>
    <input type="file" class="filepond" name="cover" id="cover">
    <br>
    <input type="submit" value="Submit">
    <a href="/books/<%= book._id %>">Cancel</a>
</form>

<%- include("./../partials/bottom") %>